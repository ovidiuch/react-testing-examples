{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:flowtype/recommended"
  ],
  "plugins": ["react", "flowtype"],
  "env": {
    "es6": true,
    "shared-node-browser": true
  },
  "globals": {
    "fetch": true,
    "localStorage": true,
    "global": true
  },
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "overrides": [
    {
      "files": [
        "babel.config.js",
        "jest.config.js",
        "jest.setup.js",
        "jest.framework-setup.js",
        "cosmos.config.js",
        "next.config.js",
        "webpack.loaders.js",
        "stub/*.js",
        "ui/server/**/*.js"
      ],
      "env": {
        "node": true
      }
    },
    {
      "files": ["**/*.test.js", "jest.framework-setup.js"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["ui/**/*.fixture.js", "ui/import-files.js"],
      "globals": {
        "require": true
      }
    }
  ]
}
